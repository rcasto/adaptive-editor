{
  "name": "adaptive-editor",
  "version": "1.0.0",
  "description": "A demo WYSIWYG editor for Adaptive Cards",
  "repository": {
    "type": "git",
    "url": "https://github.com/rcasto/adaptive-editor.git"
  },
  "main": "server.js",
  "scripts": {
    "start": "npm-run-all start:*",
    "start:server": "node server.js",
    "build": "npm-run-all clean --parallel build:*",
    "build:ckeditor": "make-dir public/vendors/ckeditor && ncp node_modules/ckeditor public/vendors/ckeditor",
    "build:adaptivecards": "cpy node_modules/adaptivecards/dist/adaptivecards.min.js public/vendors",
    "build:adaptive-html": "cpy node_modules/adaptive-html/dist/adaptive-html.iife.min.js public/vendors",
    "build:markdown-it": "cpy node_modules/markdown-it/dist/markdown-it.min.js public/vendors",
    "build:normalize.css": "cpy node_modules/normalize.css/normalize.css public/vendors",
    "clean": "rimraf public/vendors"
  },
  "keywords": [
    "wysiwyg",
    "wysiwyg-editor",
    "adaptivecards"
  ],
  "author": "Richie Casto",
  "license": "MIT",
  "dependencies": {
    "adaptive-html": "^2.0.1",
    "adaptivecards": "^1.0.0",
    "ckeditor": "^4.8.0",
    "compression": "^1.7.2",
    "express": "^4.16.2",
    "helmet": "^3.12.0",
    "markdown-it": "^8.4.1",
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "cpy-cli": "^1.0.1",
    "make-dir-cli": "^1.0.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2"
  }
}
