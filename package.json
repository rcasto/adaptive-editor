{
  "name": "adaptive-editor",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "npm-run-all build:vendor start:server",
    "start:server": "node server.js",
    "build:vendor": "npm-run-all clean --parallel build:ckeditor build:adaptivecards build:adaptive-html",
    "build:ckeditor": "make-dir public/vendors/ckeditor && ncp node_modules/ckeditor public/vendors/ckeditor",
    "build:adaptivecards": "cpy node_modules/adaptivecards/dist/adaptivecards.min.js public/vendors",
    "build:adaptive-html": "cpy node_modules/adaptive-html/dist/adaptive-html.iife.min.js public/vendors",
    "clean": "rimraf public/vendors"
  },
  "keywords": [],
  "author": "Richie Casto",
  "license": "ISC",
  "dependencies": {
    "adaptive-html": "^1.1.8",
    "adaptivecards": "^1.0.0",
    "ckeditor": "^4.8.0",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "cpy-cli": "^1.0.1",
    "make-dir-cli": "^1.0.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2"
  }
}
